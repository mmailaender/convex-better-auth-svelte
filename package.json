{
	"name": "@mmailaender/convex-better-auth-svelte",
	"author": "Micha Mailaender",
	"version": "0.0.4",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mmailaender/convex-better-auth-svelte.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev:frontend": "vite dev",
		"dev:backend": "npx convex dev",
		"dev": "concurrently --kill-others --prefix-colors blue,yellow --names 'svelte,convex' 'pnpm dev:frontend' 'pnpm dev:backend'",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"files": [
		"dist/svelte",
		"dist/sveltekit",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"exports": {
		"./svelte": {
			"types": "./dist/svelte/index.d.ts",
			"svelte": "./dist/svelte/index.js",
			"import": "./dist/svelte/index.js",
			"default": "./dist/svelte/index.js"
		},
		"./sveltekit": {
			"types": "./dist/sveltekit/index.d.ts",
			"import": "./dist/sveltekit/index.js",
			"default": "./dist/sveltekit/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.32.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.27.0",
		"@sveltejs/package": "^2.4.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.11",
		"@types/node": "^24.1.0",
		"@vitest/browser": "^3.2.4",
		"concurrently": "^9.2.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"playwright": "^1.54.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.12",
		"svelte": "^5.37.2",
		"svelte-check": "^4.3.0",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.38.0",
		"vite": "^7.0.6",
		"vite-plugin-devtools-json": "^0.4.1",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.0.0"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@convex-dev/better-auth": "^0.7.13",
		"better-auth": "^1.3.4",
		"convex": "^1.25.4",
		"convex-svelte": "^0.0.11",
		"is-network-error": "^1.1.0"
	}
}
