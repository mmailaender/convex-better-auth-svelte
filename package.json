{
	"name": "@mmailaender/convex-better-auth-svelte",
	"author": "Micha Mailaender",
	"version": "0.3.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mmailaender/convex-better-auth-svelte.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev:frontend": "vite dev",
		"dev:backend": "npx convex dev",
		"dev": "concurrently --kill-others --prefix-colors blue,yellow --names 'svelte,convex' 'pnpm dev:frontend' 'pnpm dev:backend'",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"setup:test-user": "npx tsx scripts/setup-test-user.ts",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "changeset publish"
	},
	"files": [
		"dist/svelte",
		"dist/sveltekit",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"exports": {
		"./svelte": {
			"types": "./dist/svelte/index.d.ts",
			"svelte": "./dist/svelte/index.js",
			"import": "./dist/svelte/index.js",
			"default": "./dist/svelte/index.js"
		},
		"./sveltekit": {
			"types": "./dist/sveltekit/index.d.ts",
			"import": "./dist/sveltekit/index.js",
			"default": "./dist/sveltekit/index.js"
		}
	},
	"peerDependencies": {
		"@convex-dev/better-auth": ">=0.9.11",
		"better-auth": "^1.3.34",
		"convex": "^1.27.0",
		"convex-svelte": ">=0.0.12",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"@playwright/test": "^1.57.0",
		"dotenv": "^16.5.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24.10.1",
		"@vitest/browser": "^4.0.15",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.15",
		"svelte": "^5.45.5",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.20.3",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1",
		"better-auth": "1.3.34"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"is-network-error": "^1.3.0"
	}
}
