{
	"name": "@mmailaender/convex-better-auth-svelte",
	"author": "Micha Mailaender",
	"version": "0.5.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mmailaender/convex-better-auth-svelte.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev:frontend": "vite dev",
		"dev:backend": "npx convex dev",
		"dev": "concurrently --kill-others --prefix-colors blue,yellow --names 'svelte,convex' 'pnpm dev:frontend' 'pnpm dev:backend'",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:e2e:install-browsers": "PLAYWRIGHT_BROWSERS_PATH=node_modules/.cache/ms-playwright pnpm exec playwright install",
		"test:e2e": "PLAYWRIGHT_BROWSERS_PATH=node_modules/.cache/ms-playwright playwright test",
		"test:e2e:ui": "playwright test --ui",
		"setup:test-user": "npx tsx scripts/setup-test-user.ts",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "changeset publish"
	},
	"files": [
		"dist/svelte",
		"dist/sveltekit",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"exports": {
		"./svelte": {
			"types": "./dist/svelte/index.d.ts",
			"svelte": "./dist/svelte/index.js",
			"import": "./dist/svelte/index.js",
			"default": "./dist/svelte/index.js"
		},
		"./sveltekit": {
			"types": "./dist/sveltekit/index.d.ts",
			"import": "./dist/sveltekit/index.js",
			"default": "./dist/sveltekit/index.js"
		}
	},
	"peerDependencies": {
		"@convex-dev/better-auth": ">=0.10.10",
		"better-auth": "^1.4.9",
		"convex": "^1.31.0",
		"convex-svelte": ">=0.0.12",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@convex-dev/eslint-plugin": "^1.1.1",
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^10.0.1",
		"@playwright/test": "^1.58.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.2.2",
		"@vitest/browser": "^4.0.18",
		"better-auth": "1.4.9",
		"concurrently": "^9.2.1",
		"convex": "1.31.7",
		"dotenv": "^17.2.4",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"jsdom": "^28.0.0",
		"playwright": "^1.58.2",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.17",
		"svelte": "^5.50.0",
		"svelte-check": "^4.3.6",
		"svelte-eslint-parser": "^1.4.1",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"is-network-error": "^1.3.0"
	}
}
